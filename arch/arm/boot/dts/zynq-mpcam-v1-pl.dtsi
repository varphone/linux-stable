/ {
	amba_pl {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "simple-bus";
		ranges ;

		/* MPCAM ISP device base on miscdev */
		mpcam0: mpcam@0 {
			#address-cells = <1>;
			#size-cells = <1>;
			compatible = "tdc,mpcam";
			ranges;
			reg = <0x21000000 0xFFFFFF>,   /* Filler: IR Frame Buffers  */
		              <0x23000000 0xFFFFFF>;   /* Filler: VIS Frame Buffers */

			status = "disabled";

			/* IR Read */
			port@0 {
				interrupt-names = "interrupt";
				interrupt-parent = <&intc>;
				interrupts = <0 29 1>;
				reg = <0x43c20000 0x10000>;
			};

			/* IR Write */
			port@1 {
				interrupt-names = "interrupt";
				interrupt-parent = <&intc>;
				interrupts = <0 30 1>;
				reg = <0x43c10000 0x10000>;
			};
           
			/* VIS Read */ 
            		port@2 {
                		interrupt-names = "interrupt";
                		interrupt-parent = <&intc>;
                		interrupts = <0 32 1>;
                		reg = <0x43c40000 0x10000>;
            		};

			/* VIS Write */
            		port@3 {
                		interrupt-names = "interrupt";
                		interrupt-parent = <&intc>;
                		interrupts = <0 31 1>;
                		reg = <0x43c30000 0x10000>;
            		};

			/* Generic Config */
           		port@4 {
                		reg = <0x43c00000 0x10000>;
            		};

			/* IR VIS Merge*/
            		port@5 {
                		reg = <0x43c50000 0x10000>;
            		};
		};
	};
};
