/dts-v1/;
#include "imx6q.dtsi"
#include "myimx6ek200-cm.dtsi"

/ {
	model = "TDC Car Video Recorder for Military (V2-B)";
	compatible = "tdc,cvr-mil-v2", "myzr,myimx6", "myzr,myimx6q", "myzr,myimx6cb200", "myzr,myimx6ek200", "fsl,imx6q", "fsl,imx6q-ldb";
};

&ldb {
	lvds-channel@0 {
		crtc = "ipu2-di0";

		display-timings {
			native-mode = <&timing0>;
			/* 800x600p60 for NLB084SV01L */
			timing0: hsd100pxn1 {
				clock-frequency = <35596800>;
				hactive = <800>;
				vactive = <600>;
				hback-porch = <80>;
				hfront-porch = <48>;
				vback-porch = <11>;
				vfront-porch = <3>;
				hsync-len = <32>;
				vsync-len = <4>;
			};
		};
	};
	lvds-channel@1 {
		crtc = "ipu2-di1";

		display-timings {
			native-mode = <&timing1>;
			/* 800x600p60 for NLB084SV01L */
			timing1: hsd100pxn1 {
				clock-frequency = <35596800>;
				hactive = <800>;
				vactive = <600>;
				hback-porch = <80>;
				hfront-porch = <48>;
				vback-porch = <11>;
				vfront-porch = <3>;
				hsync-len = <32>;
				vsync-len = <4>;
			};
		};

	};
};

&mxcfb1 {
	status = "okay";
};

&mxcfb2 {
	status = "okay";
};

&mxcfb3 {
	status = "okay";
};

&mxcfb4 {
	status = "okay";
};

&sata {
	status = "okay";
};

&snvs {
	status = "disabled";
};
