/dts-v1/;
#include "imx6q.dtsi"
#include "myimx6ek200-cm.dtsi"

/ {
	model = "TDC Car Video Recorder for Military (V2-MLC)";
	compatible = "tdc,cvr-mil-v2", "myzr,myimx6", "myzr,myimx6q", "myzr,myimx6cb200", "myzr,myimx6ek200", "fsl,imx6q", "fsl,imx6q-ldb";

	reserved-memory {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		/* global autoconfigured region for contiguous allocations */
		linux,cma {
			compatible = "shared-dma-pool";
			reusable;
			size = <0x1E000000>;
			linux,cma-default;
		};
	};
};

&ldb {
	status = "okay";
};

&can1 {
	status = "disabled";
};

&can2 {
	status = "disabled";
};

&fec {
	status = "disabled";
};

&hdmi_audio {
	status = "dsiabled";
};

&hdmi_cec {
	status = "disabled";
};

&hdmi_core {
	status = "okay";
};

&hdmi_video {
	status = "okay";
};

&i2c1 {
	atm88pa@7a {
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_csi_keys>;
		interrupt-parent = <&gpio1>;
		interrupts = <13 0>;

		power {
			/* poweroff GPIO5_IO20, ACTIVE_LOW */
			gpios = <&gpio5 20 1>;
		};
	};
};

&i2c2 {
	status = "okay";
};

&i2c3 {
	status = "okay";
};

&mxcfb1 {
	compatible = "fsl,mxc_sdc_fb";
	disp_dev = "hdmi";
	interface_pix_fmt = "RGB24";
	mode_str = "1920x1080M@59";
	default_bpp = <32>;
	int_clk = <0>;
	late_init = <0>;
	status = "okay";
};

&mxcfb2 {
	status = "disabled";
};

&mxcfb3 {
	status = "disabled";
};

&mxcfb4 {
	status = "disabled";
};

&pcie {
	status = "disabled";
};

&pwm1 {
	status = "disabled";
};

&sata {
	status = "okay";
};

&snvs {
	status = "disabled";
};
