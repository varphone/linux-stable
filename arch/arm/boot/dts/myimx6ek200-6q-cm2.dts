/dts-v1/;
#include "imx6q.dtsi"
#include "myimx6ek200.dtsi"

/ {
	model = "TDC Car Video Recorder for Military (V2)";
	compatible = "tdc,cvr-mil-v2", "myzr,myimx6", "myzr,myimx6q", "myzr,myimx6cb200", "myzr,myimx6ek200", "fsl,imx6q", "fsl,imx6q-ldb";
};

&i2c1 {
	rx8025@32 {
		compatible = "rtc,rx8025";
		reg = <0x32>;
		/* Default date time: 2016-8-1 0:0:0 */
		def-rtc-time = <0 0 0 1 7 116 1 0 0>;
	};
};

&ldb {
	lvds-channel@0 {
		crtc = "ipu2-di0";
		fsl,data-mapping = "spwg";
		fsl,data-width = <18>;
		status = "okay";

		display-timings {
			native-mode = <&timing0>;
			timing0: hsd100pxn1 {
				clock-frequency = <30419000>;
				hactive = <854>;
				vactive = <480>;
				hback-porch = <82>;
				hfront-porch = <48>;
				vback-porch = <6>;
				vfront-porch = <3>;
				hsync-len = <32>;
				vsync-len = <10>;
			};
		};
	};

	lvds-channel@1 {
		crtc = "ipu2-di1";
		fsl,data-mapping = "spwg";
		fsl,data-width = <18>;
		primary;
		status = "okay";

		display-timings {
			native-mode = <&timing1>;
			timing1: hsd100pxn1 {
				clock-frequency = <64022400>;
				hactive = <1280>;
				vactive = <720>;
				hback-porch = <80>;
				hfront-porch = <48>;
				vback-porch = <13>;
				vfront-porch = <3>;
				hsync-len = <32>;
				vsync-len = <5>;
			};

		};
	};
};

&mxcfb1 {
	status = "okay";
};

&mxcfb2 {
	status = "okay";
};

&mxcfb3 {
	status = "okay";
};

&mxcfb4 {
	status = "okay";
};

&sata {
	status = "okay";
};

&snvs {
	status = "disabled";
};
